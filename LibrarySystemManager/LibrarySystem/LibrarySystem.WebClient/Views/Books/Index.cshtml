@model BookIndexViewModel

<h4>Today's book suggestions</h4>
<br>
<form asp-controller="Books" asp-action="ListBooks" method="post">
    <input type="text" class="form-control" asp-for="Parameters" placeholder="Type here ...">
    <div class="radio">
        <label class="radio-inline">
            <input type="radio" value="all" asp-for="SearchBy" checked />
            <input type="number" value="1" asp-for="CurrentPage" checked hidden />
            All books
        </label>
        <label class="radio-inline">
            <input type="radio" value="title" asp-for="@Model.SearchBy" />
            by title
        </label>
        <label class="radio-inline">
            <input type="radio" value="author" asp-for="@Model.SearchBy" />
            By author
        </label>
        <label class="radio-inline">
            <input type="radio" value="genre" asp-for="@Model.SearchBy" />
            By genre
        </label>
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>
<br>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Cover</th>
            <th>Title</th>
            <th>Author</th>
            <th>Genre</th>
            <th>more info</th>
            <th>booking</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var book in Model.Books)
        {
            <partial name="_BooksDetailsPartial" model="book" />
        }

    </tbody>
</table>