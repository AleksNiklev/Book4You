@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "ActiveUsers";
}

<h2>Active Users</h2>
<div class="clearfix">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Add Book</th>
                <th>Remove Book</th>
                <th>View Details</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@(user.FirstName + " " + user.LastName)</td>
                    <td>
                        <a asp-area="administration" asp-controller="Users" asp-action="AddBook" asp-route-id="@user.Id"
                           class="btn btn-sm btn-lg active" role="button">Add Book</a>
                    </td>
                    <td>
                        <a asp-area="administration" asp-controller="Users" asp-action="RemoveBook" asp-route-id="@user.Id"
                           class="btn btn-sm btn-lg active" role="button">Remove Book</a>
                    </td>
                    <td>
                        <a asp-area="administration" asp-controller="Users" asp-action="Details" asp-route-id="@user.Id"
                           class="btn btn-sm btn-lg active" role="button">Details</a>
                    </td>
                    <td><button class="btn btn-sm btn-lg active" role="button">Edit</button></td>
                    <td><button class="btn btn-sm btn-lg active" role="button">Delete</button></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
