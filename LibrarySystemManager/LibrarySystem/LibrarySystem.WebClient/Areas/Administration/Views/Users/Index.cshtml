@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>All Users</h2>
<div>
    <a asp-area="administration" asp-controller="Users" asp-action="ActiveUsers"
       class="btn btn-info btn-sm active" role="button">Active Users</a>
</div>
<div class="clearfix">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Add Book</th>
                    <th>Remove Book</th>
                    <th>View Details</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                <tr>
                    <td>@(user.FirstName + " " + user.LastName)</td>
                    <td>
                        <a asp-area="administration" asp-controller="Users" asp-action="AddBook" asp-route-id="@user.Id"
                           class="btn btn-sm btn-lg active" role="button">Add Book</a>
                    </td>
                    <td>
                        <a asp-area="administration" asp-controller="Users" asp-action="RemoveBook" asp-route-id="@user.Id"
                           class="btn btn-sm btn-lg active" role="button">Remove Book</a>
                    </td>
                    <td>
                        <a asp-area="administration" asp-controller="Users" asp-action="Details" asp-route-id="@user.Id"
                           class="btn btn-sm btn-lg active" role="button">Details</a>
                    </td>
                    <td>
                        <a asp-area="administration" asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id"
                           class="btn btn-sm btn-lg active" role="button">Edit</a>
                    </td>                  

                    @if (!user.IsDeleted)
                    {
                        <td>
                            <a asp-area="administration" asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id"
                               class="btn btn-sm btn-lg active" role="button">Delete</a>
                        </td>
                    }
                    else
                    {
                        <td>
                            <a asp-area="administration" asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id"
                               class="btn btn-sm btn-lg disabled" role="button">Delete</a>
                        </td>
                    }

                </tr>
                }
            </tbody>
        </table>
    </div>
