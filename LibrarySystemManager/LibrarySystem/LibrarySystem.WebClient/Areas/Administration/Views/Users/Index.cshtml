@model ListUsersModel

@{
    ViewData["Title"] = "Index";
}

<h2></h2>
<div class="text-right" >
    <a asp-area="" asp-controller="Books" asp-action="Index"
       class="btn btn-info btn-lg active" role="button">Books Administration</a>
</div>
<h2>Active Users</h2>
 <div class="text-left">
        <a asp-area="administration" asp-controller="Users" asp-action="AllUsers"
           class="btn btn-info btn-sm active" role="button">All Users</a>
 </div>    
<br/>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>View Details</th>
            <th>Edit</th>
            <th>Delete</th>
            <th>Add Book</th>
            <th>Remove Book</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@(user.FirstName + " " + user.LastName)</td>
                <td>
                    <a asp-area="administration" asp-controller="Users" asp-action="Details" asp-route-id="@user.Id"
                       class="btn btn-toolbar btn-sm active" role="button">Details</a>
                </td>
                <td>
                    <a asp-area="administration" asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id"
                       class="btn btn-sm btn-lg active" role="button">Edit</a>
                </td>
                <td>
                    <a asp-area="administration" asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id"
                       class="btn btn-sm btn-lg active" role="button">Delete</a>
                </td>
                <td>
                    <a asp-area="administration" asp-controller="Users" asp-action="AddBook" asp-route-id="@user.Id"
                       class="btn btn-sm btn-lg active" role="button">Add Book</a>
                </td>
                <td>
                    <a asp-area="administration" asp-controller="Users" asp-action="RemoveBook" asp-route-id="@user.Id"
                       class="btn btn-sm btn-lg active" role="button">Remove Book</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    int previusPage = Model.CurrentPage - 1;
    int NextPage = Model.CurrentPage + 1;
}

<nav aria-label="...">
    <ul class="pagination">
        <li class="page-item">
            @if (Model.CurrentPage > 1)
            {
                <a class="page-link" href="/administration/users/Index?page=@previusPage">Previous</a>
            }
        </li>
        <li class="page-item">
            <a class="page-link" href="/administration/users/Index?page=@NextPage">Next</a>
        </li>
    </ul>
</nav>

